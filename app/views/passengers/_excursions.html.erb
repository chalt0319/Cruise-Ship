<ul>
  <%excursions.each do |e|%>
    <% if find_passenger_excursion(passenger, e)[0].comment != nil%>
      <li class="excursion_info id_<%=e.id%>"><%=e.title%> - <%=e.port.location%> - <%=excursion_pluralize(e)%> - <a class="add_comment" data-id="<%=e.id%>" data-url="/passengers/<%=passenger.id%>/excursions/<%=e.id%>/passenger_excursions/<%=find_passenger_excursion(passenger, e)[0].id%>/edit" href="#">Add Comment</a> - <a class="delete_link" data-id="<%=e.id%>" data-deleteurl="/passengers/<%=passenger.id%>/excursions/<%=e.id%>/edit" href="#">Delete</a></li>
        <ul>
          <li class="childId_<%=e.id%>"><%=find_passenger_excursion(passenger, e)[0].comment%></li>
        </ul>
      <%else%>
        <li class="excursion_info id_<%=e.id%>"><%=e.title%> - <%=e.port.location%> - <%=excursion_pluralize(e)%> - <a class="add_comment" data-id="<%=e.id%>" data-url="/passengers/<%=passenger.id%>/excursions/<%=e.id%>/passenger_excursions/<%=find_passenger_excursion(passenger, e)[0].id%>/edit" href="#">Add Comment</a> - <a class="delete_link" data-id="<%=e.id%>" data-deleteurl="/passengers/<%=passenger.id%>/excursions/<%=e.id%>/edit" href="#">Delete</a></li>
    <%end%>
  <%end%>
</ul>
