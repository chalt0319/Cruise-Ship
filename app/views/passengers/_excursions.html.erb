<ul>
  <%excursions.each do |e|%>
    <% if find_passenger_excursion(passenger, e)[0].comment != "" && find_passenger_excursion(passenger, e)[0].comment != nil%>
      <li class="excursion_info id_<%=e.id%>"><%=e.title%> - <%=e.port.location%> - <%=excursion_pluralize(e)%> - <span class="link add_comment" onclick="addComment(<%=passenger.id%>, <%=e.id%>, <%=find_passenger_excursion(passenger, e)[0].id%>)">Add Comment</span> - <span class="link delete_link" onclick="deleteExcursion(<%=passenger.id%>, <%=e.id%>)">Delete</span> </li>
        <div class="divChild_<%=e.id%>">
          <ul>
            <li class="commentList_<%=e.id%>">
              <div class="childId_<%=e.id%>">
                <span><%=find_passenger_excursion(passenger, e)[0].comment%></span>
                <span> - </span>
                <span class="link comment_<%=find_passenger_excursion(passenger, e)[0].id%>" onclick="deleteComment(<%=passenger.id%>, <%=e.id%>, <%=find_passenger_excursion(passenger, e)[0].id%>)">Delete</span>
              </div>
            </li>
          </ul>

        </div>
      <%else%>
        <li class="excursion_info id_<%=e.id%>"><%=e.title%> - <%=e.port.location%> - <%=excursion_pluralize(e)%> - <span class="link add_comment" data-id="<%=e.id%>" onclick="addComment(<%=passenger.id%>, <%=e.id%>, <%=find_passenger_excursion(passenger, e)[0].id%>)">Add Comment</span> - <span class="link delete_link"  onclick="deleteExcursion(<%=passenger.id%>, <%=e.id%>)">Delete</span></li>
        <div class="divChild_<%=e.id%>">
          <ul>
            <div class="commentList_<%=e.id%>">
            </div>
          </ul>

        </div>
    <%end%>
  <%end%>
</ul>
