      <%else%>
        <li><%=e.title%> - <%=e.port.location%> - <%=excursion_pluralize(e)%> - <%=link_to("Add Comment", edit_passenger_excursion_passenger_excursion_path(passenger, e, find_passenger_excursion(passenger, e)))%> - <%=link_to("Delete", edit_passenger_excursion_path(passenger, e))%></li>
