<div class="login-form">
<%=form_for(passenger) do |f|%>
  <%=f.label "Ship"%>
  <%=f.collection_select(:ship_id, Ship.all, :id, :name, {include_blank: ""})%><br><br>
  <%=f.label :username%>
  <%=f.text_field :name%><br>
  <%=f.label :password%>
  <%=f.text_field :password%><br><br>
  <%=f.submit "Create Account", class: "login-submit"%>
<%end%>
</div>
