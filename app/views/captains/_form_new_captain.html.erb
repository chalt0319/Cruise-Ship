<%=form_for(captain) do |f|%>
  <%=f.label :name%>
  <%=f.text_field :name%><br>
  <%=f.label :password%>
  <%=f.text_field :password%><br>
  <%=f.label "Available Ships:"%><br>
  <%=f.collection_check_boxes(:ship_ids, Ship.all, :id, :name) do |b|%>
    <%=b.check_box + b.text%><br>
  <%end%>
  <%=f.label "Captain Secret Phrase"%>
  <%=f.text_field :secret_phrase%><br><br>
  <%=f.submit%>
<%end%>
